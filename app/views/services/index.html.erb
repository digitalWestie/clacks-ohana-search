<div id="resultsPage" class="clearfix">

  <ul class="nav nav-tabs visible-xs-* hidden-lg" role="tablist">
    <li class="active"><a href="#filtersForm" role="tab" data-toggle="tab">Filter</a></li>
    <li><a href="#resultsList" role="tab" data-toggle="tab">List</a></li>
    <li><a href="#mapResults" role="tab" data-toggle="tab">Map</a></li>
  </ul>

  <div class="tab-content">
    <div id="filtersForm" class="tab-pane active">
      <form role="form" action="services" method="get">
        <div class="form-group">
          <button type="submit" class="btn btn-default">Clear</button>
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
        <div id="searchKeyword" class="form-group accordion">
          <label for="keywordSearch" class="label">Keywords</label>
          <input name="keyword" id="keywordSearch" type="text" class="form-control" placeholder="eg. support groups">
        </div>
        <div id="searchOrganisation" class="form-group accordion">
          <label for="organisationName" class="label">Organisation Name</label>
          <input id="organisationName" type="text" class="form-control" placeholder="eg. ABC Nursery, ">
        </div>
        <div id="searchPlace" class="form-group">
          <label for="townVillage" class="label">Town or village</label>
          <input name="location" id="townVillage" type="text" class="form-control" placeholder="eg Alloa, Coalsnaughton, Tillicoultry">
        </div>
        <div id="selectCategories" class="form-group">
          <label class="label">Categories</label>
          <ul class="checkBoxes">
            <li><label><input type="checkbox" value="">Childcare services</label></li>
            <li><label><input type="checkbox" value="">For babies</label></li>
            <li><label><input type="checkbox" value="">Sports clubs</label></li>
            <li><label><input type="checkbox" value="">Dance classes</label></li>
            <li><label><input type="checkbox" value="">Drama groups</label></li>
            <li><label><input type="checkbox" value="">Outdoor activities</label></li>
            <li><label><input type="checkbox" value="">Swimming lessons</label></li>
          </ul>
        </div>
        <div id="selectBudget" class="form-group">
          <label for="townVillage" class="label">Budget per session</label><br>
          <b>&pound;0</b> <input id="yourBudget" type="text" class="span2" value="" data-slider-min="0" data-slider-max="20" data-slider-step="1" data-slider-value="[0,20]"/> <b>&pound;20</b>
        </div>
        <div id="selectDays" class="form-group">
          <label for="townVillage" class="label">Days</label>
          <ul class="checkBoxes">
          <li><label><input type="checkbox" value="">Mon</label></li>
          <li><label><input type="checkbox" value="">Tue</label></li>
          <li><label><input type="checkbox" value="">Wed</label></li>
          <li><label><input type="checkbox" value="">Thu</label></li>
          <li><label><input type="checkbox" value="">Fri</label></li>
          <li><label><input type="checkbox" value="">Sat</label></li>
          <li><label><input type="checkbox" value="">Sun</label></li>
          </ul>
        </div>
        <div id="selectAge" class="form-group">
          <label for="childrenAge" class="label">Age of children</label><br>
          <b>0</b> <input id="childrenAge" type="text" class="span2" value="" data-slider-min="0" data-slider-max="16" data-slider-step="1" data-slider-value="[0,16]"/> <b>16</b>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-default">Clear</button>
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </form>
    </div>

    <div id="resultsList" style="background-color:white;" class="tab-pane active">
      <ul id="searchResults">

        <% if @search.services.present? %>
          <% for service in @search.services %>

            <li>
              <h3><a href=""><%= service.name %></a></h3>
              <p>
                <%= truncate(service.description, length:140) %>
                <%= link_to 'More', '#' %>
              </p>
              <address style = "color:#888;">
                <%#= service.name %>, <%#= full_address_for(service.address) %>
              </address>
            </li>

          <% end %>
        <% else %>
          nuttin
        <% end %>

      </ul>
    </div>

    <div id="mapResults"  class="tab-pane active"></div>

  </div>
</div>

<% content_for :footer do %>
  <%= asset_path('marker-icon.png') %>
<% end %>

<% content_for :after_footer do %>
  <%= javascript_include_tag "leaflet" %>
  <%= javascript_include_tag "bootstrap-slider" %>
  <%= javascript_include_tag "services" %>
<% end %>

<% content_for :footer_js do %>
  $(document).ready(function(){
    var map = initialiseMap();
    var locations = <%= @search.map_data.to_json.html_safe %>;
    var markers = addLocationsToMap(locations, map);
    console.log(markers);
  });
<% end %>
