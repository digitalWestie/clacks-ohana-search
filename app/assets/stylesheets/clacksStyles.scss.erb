      &.sport {background: url('<%= asset_path('icon-sports.png') %>') no-repeat 20px center  #f0f0f0; }
      &.support {background: url('<%= asset_path('icon-support.png') %>') no-repeat 20px center  #f0f0f0; }
      &.health {background: url('<%= asset_path('icon-health.png') %>') no-repeat 20px center  #f0f0f0; }
      &.learning {background: url('<%= asset_path('icon-learning.png') %>') no-repeat 20px center  #f0f0f0; }
      &.prenatal-babies {background: url('<%= asset_path('icon-babies.png') %>') no-repeat 20px center  #f0f0f0; }
