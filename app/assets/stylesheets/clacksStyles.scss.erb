
$main-blue:     #336699;
$light-blue:    #81a7cc;
$dark-grey:     #666666;
$medium-grey:   #999999;
$light-grey:    #f0f0f0;
$yellow:        #ffda00;
$bright-blue:   #428bca;
$green:         #449d44;
$orange:        #d45518;

@mixin rounded ($radius: 2px) {
  border-radius: $radius;
  -webkit-border-radius: $radius;
  -moz-border-radius: $radius;
  -khtml-border-radius: $radius;
}

@mixin box-sized () {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}


@mixin transform($transforms) {
	   -moz-transform: $transforms;
	     -o-transform: $transforms;
	    -ms-transform: $transforms;
	-webkit-transform: $transforms;
          transform: $transforms;
}
// rotate
@mixin rotate ($deg) {
  @include transform(rotate(#{$deg}deg));
}

/* LAYOUT STYLES *******************/
body {
  color: black;
  font-family: 'Lato', sans-serif;
}
.navbar {

 .navbar-collapse {
  background: $main-blue;
  width: 100%;
  z-index: 9999;
 }

}
footer {
  padding: 20px;
  border-top: 1px solid black;
}

.navbar-header{
 text-align: center;
 .navbar-toggle {
   background: $main-blue;
   position: absolute;
   right: 0;
   float: none;
   .title {float: right; font-weight: 700; margin-left: 30px; color: white; text-transform: uppercase;}
   .icon-bar { background: white; position: relative; top: 3px;}
 }
 .navbar-brand {
  float: none;
  height: auto;
  display: block;
  padding: 0;
  margin: 0.5em 0 0 0;
  color: #2c588b;
  img {
   margin: 0 auto;
   max-width: 250px;
  }
 }
}

.navbar-nav {
  text-align: center;

  li {
   margin: 2em 0.25em;
   a {
    color: white; font-weight: 600;
    font-size: 1.25em;
    padding: 0.5em;
    border: 3px solid transparent;
     @include rounded(10px);
     &:hover {background: $orange; border: 3px solid $light-grey;
     }
    }
    &:nth-child(1){a:hover, a:active {background: $orange;@include rotate(5);}}
    &:nth-child(2){a:hover, a:active {background: desaturate($yellow, 10%); @include rotate(-5);}}
    &:nth-child(3){a:hover, a:active {background: $green;@include rotate(5);}}
    &:nth-child(4){a:hover, a:active {background: $main-blue;@include rotate(-5);}}
   }
 }


/* BUTTON STYLES *******************/
.button {
 color: black;
 padding: 0.5em 1em;
 border: none;
 background: $light-grey;
 @include rounded(2px);
 font-weight: bold;
 -webkit-box-shadow: 0px 3px 0px 0px rgba(200, 200, 200, 0.55);
 -moz-box-shadow:    0px 3px 0px 0px rgba(200, 200, 200, 0.55);
 box-shadow:         0px 3px 0px 0px rgba(200, 200, 200, 0.55);

 &.orange { color: white !important; background: $orange; box-shadow: #b14714;}
 &.blue { color: white !important; background: $main-blue; box-shadow: #b14714;}
 &.green { color: white !important; background: $green; box-shadow: #b14714;}
 &.search { color: $main-blue;}
 &.right {  float: right; }

 &:hover, &:active {
   top: 2px;
   position: relative;
   text-decoration: none;
   -webkit-box-shadow: 0px 0px 0px 0px rgba(200, 200, 200, 0.55);
   -moz-box-shadow:    0px 0px 0px 0px rgba(200, 200, 200, 0.55);
   box-shadow:         0px 0px 0px 0px rgba(200, 200, 200, 0.55);
   }

}

.button.small {
 padding: 0.15em 0.75em;
}

.backButton {
 display: block;
 margin: 1em 0;
}


/* HOME STYLES *******************/
#homePage {

  #searchForm {
    text-align: center;
    margin: 3em 0 2em 0;

    label {
      font-size: 2em;
      color: white;
      margin: 0.5em 0 0.15em 0;
    }
    input#searchBox {
      width: 80%;
      display: inline;
      border-top-right-radius:0em;
      border-bottom-right-radius:0em;
      border: none;
      height: 45px;
      @include box-sized();
      font-size: 1.5em;
    }
    button[type=submit] {
      border-top-left-radius:0em;
      border-bottom-left-radius:0em;
      position: relative;
      left: -2px;
      top: -5px;
      border: none;
      padding: 7px 12px;
      height: 45px;
      width: 10%;
      @include box-sized();
    }
  }

  #searchLinks {
    list-style: none;

    li {
      margin-bottom: 1em;
     a {
      display: block;
      font-size: 2em;
      padding: 20px 20px 20px 80px;
      color: $main-blue;
      @include rounded(5px);

      &.near {background: url('<%= asset_path('icon-near-me.png') %>') no-repeat 20px center  #f0f0f0; }
      &.childcare {background: url('<%= asset_path('icon-childcare.png') %>') no-repeat 20px center  #f0f0f0; }
