/* HOMEPAGE STYLES *******************/
.align-right {text-align: right;}


/* HOMEPAGE STYLES *******************/


#searchForm {
  background: url('<%= asset_path('clacks/gplaypattern.png') %>')
}


#searchForm {
 padding: 3em 15px;
 label { display: block; width: 100%; font-size: 3em; text-align: center; }
 .input-group {padding: 0 15px; position: relative}
 .input-group-btn {
   position: absolute;
   width: 55px;
   right: 15px;
   display: block;
   z-index: 1000;

   button {padding: 0.5em 1.5em;; height: 50px;}

  }
 input#searchBox {font-size: 1.5em; padding: 0.5em;  height: 50px;}
}

  #searchLinks {
    list-style: none;
    padding: 2em 0;
    li {
      margin-bottom: 1em;
     a {
      display: block;
      font-size: 2em;

      &:hover {text-decoration: none;}

     }
    }
   }





/* SEARCH FORM STYLES *******************/
#filtersForm {
  width: 25%;
  float: left;
  height: 100%;
  overflow: scroll;

  form {
    margin: 1em;

    .form-group {margin: 15px 0;}

    label {
     display: inline-block;
     color: black;
     font-size: 1.25em !important;
     padding: 0.25em 0 0 0;
     text-align: left;
     span.glyphicon { font-size: 0.75em; }
     }

    a.selectAll {float: right;}

    ul.checkBoxes {
     list-style: none;
     padding: 0;
     label {
      font-weight: 300;
      font-size: 1em !important;
      input {margin-right: 0.15em;}
     }
    }
    .radiobuttons {
     p label {
      font-weight: 300;
      font-size: 1em !important;
     }
    }

    #selectDays li {
      display: inline-block;
      margin-right: 0.35em;
      &:last-child {margin-right :0}
    }

    .slider.slider-horizontal {
      width: 85%;
      height: 20px;
     }
   }
}


/* SEARCH RESULTS STYLES *******************/

#resultsPage {

  p.location { color:#666 !important; font-weight: 600; padding-top: 0.25em;}
  address { color:#888 !important; }


  .double-button-group {

     padding: 0 0 1em 0;

     border-bottom: 1px solid $medium-grey;

     &.bottom {border-top: 1px solid $medium-grey; border-bottom: none; padding: 1em 0 0 0;}

     button, a {
       width: 49%;
       font-size: 1.25em;
       color: $main-blue;
       span.glyphicon {margin-right: 0.25em;}
       display: inline-block;
       text-align: center;
       padding: 0.5em;
       &.search, &.green, &.orange {
        color: white
       }

       }
   }

  #resultsList {
    background: white;
    overflow: scroll;
    border: 1px solid;
    border-bottom: none;
    border-top: none;
    width: 25%;
    float: left;
    height: 100%;

    #entries {
     padding: 1em;
     background: $light-grey;
    }

    #pagResults {
     padding: 1em;
     a {
      display: inline-block;
      &.more {float: right;}
      }
    }

    #noResults {
     padding: 0 1em;
    }

    ul {
     list-style: none;
     padding: 0;
     margin: 0;
     li {
       border-bottom: 1px solid black;
       padding: 1em;
       h3 {font-size: 21px; color: #0e3e6c; font-weight: 700;}
       p {color: $orange;}
       * {margin: 0;}
     }

   }
  }


}

#mapPanel {
  width: 50%;
  height: 100%;
  display: block;
  float: right;
}

#resultsPage #mapPanel #mapResults{
  width: 100%;
  height: 100%;
  display: block;
}



