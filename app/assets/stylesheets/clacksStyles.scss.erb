.ie9 #serviceDetails {  word-break: break-word; }





/* Small devices (tablets, 768px and up) */
@media (max-width: 767px) {
  body {

   .button { padding: 0.5em; }


  .navbar-toggle {
   .icon-bar {background: white;}
   position: relative;
   right: -10px;
  }


  #homePage {
    #searchLinks a {
     font-size: 1.75em;
    }

    #searchForm {
     .input-group {
      padding: 0;
     }
     label {
      font-size: 1.8em !important;
     }
    .input-group-btn {
     right: 0;
     width: 40px;
     button {padding: 0.5em 1em;}
    }
   }

   input#searchBox {
     display: inline;
   }
  }
  #filtersForm,
  #resultsList,
  #mapResults {
    width: 100% !important;
    height: auto !important;

  }
  #filtersForm {
    width: 100% !important;
    z-index: 1000;
    height: 100% !important;
    display: none;
  .double-button-group {
    padding: 0 0 1em 0 !important;
    margin-bottom: 1em;
    &.bottom { padding: 1em 0 0 0!important; margin: 0 !important;}
    }
  }
  #resultsList {
    height: 100% !important;
    display: none;
  }
  #mapResults, #mapPanel {
    width: 100% !important;
    z-index: 1000;
    height: 600px !important;
  }
  .double-button-group {padding: 1em !important;
      .button {
        padding: 0.25em !important;
        font-size: 1.15em!important;
        span.glyphicon {margin-right: 0 !important;}
      }
   }
 }

footer {
 text-align: center;
 .align-right {
  text-align: center;
 }
 .col-sm-6:first-child {padding-bottom: 1em;}
}

}

/* Small devices (tablets, 768px and up) */
@media (min-width: 768px) {


  body {
     -webkit-background-size: cover;
     -moz-background-size: cover;
     -o-background-size: cover;
     background-size: cover;

     &.services-show {
      background: url('<%= asset_path('clacks/gplaypattern.png') %>')
     }
  }

  .navbar {
    .navbar-header {display: inline-block;}
    .navbar-toggle {display: none;}
    .navbar-collapse {
      border-top: none;
      float: right;
      display: inline-block;
      visibility: visible;
      ul li {display: inline-block;

      a:hover, a:active {background: none; text-decoration: underline; }

      }
      }
    }

  #homePage {
   margin-top: 0px;
   margin-bottom: 70px;
  }
  .tab-content > .tab-pane {
    display: block !important;
  }
  #resultsList {
    .double-button-group{
      display: none;
    }
  #pagResults {display: none;}
  }
  #mapPanel {
    .double-button-group {
      display: none;
    }
  }

  footer p.copy {margin: 0;}

  body.welcome-index #servicePage {
   background: white;
   margin-top: 30px;
  }

  body.welcome-index .footer,
  body.welcome-feedback .footer  {
    position: fixed;
    width: 100%;
    bottom: 0;
  }

}
