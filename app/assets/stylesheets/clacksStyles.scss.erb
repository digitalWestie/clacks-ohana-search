
$main-blue:     #336699;
$light-blue:    #81a7cc;
$dark-grey:     #dbdbdb;
$light-grey:    #f0f0f0;
$yellow:        #ffda00;
$bright-blue:   #428bca;
$green:         #449d44;
$orange:        #d45518;

@mixin rounded ($radius: 2px) {
  border-radius: $radius;
  -webkit-border-radius: $radius;
  -moz-border-radius: $radius;
  -khtml-border-radius: $radius;
}

@mixin box-sized () {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}


/* LAYOUT STYLES *******************/
body {
  color: black;
  font-family: 'Lato', sans-serif;
}
.navbar {

}
footer {
  padding: 20px;
  border-top: 1px solid black;
}

.navbar-header{
 text-align: center;
 .navbar-toggle {
   background: $main-blue;
   position: absolute;
   right: 0;
   float: none;
   .icon-bar { background: white;}
 }
 .navbar-brand {
  float: none;
  height: auto;
  display: block;
  padding: 0;
  margin: 0.5em 0 0 0;
  color: #2c588b;
  img {
   margin: 0 auto;
   max-width: 250px;
  }
 }
}

.navbar-nav {
  li {
   margin: 1em;
   a {
    color: white; font-weight: 600;
    padding: 0 0 2px 0;
    &:hover { background: none; border-bottom: 2px solid white; padding: 0;}
      }
   }
 }


/* BUTTON STYLES *******************/
.button {
 color: black;
 padding: 0.5em 1em;
 border: none;
 background: $light-grey;
 @include rounded(2px);
 font-weight: bold;
 -webkit-box-shadow: 0px 3px 0px 0px rgba(200, 200, 200, 0.55);
 -moz-box-shadow:    0px 3px 0px 0px rgba(200, 200, 200, 0.55);
 box-shadow:         0px 3px 0px 0px rgba(200, 200, 200, 0.55);

 &.orange { color: white !important; background: $orange; box-shadow: #b14714;}
 &.blue { color: white !important; background: $main-blue; box-shadow: #b14714;}
 &.green { color: white !important; background: $green; box-shadow: #b14714;}
 &.search { color: $main-blue;}
 &.right {  float: right; }

 &:hover, &:active {
   top: 2px;
   position: relative;
   text-decoration: none;
   -webkit-box-shadow: 0px 0px 0px 0px rgba(200, 200, 200, 0.55);
   -moz-box-shadow:    0px 0px 0px 0px rgba(200, 200, 200, 0.55);
   box-shadow:         0px 0px 0px 0px rgba(200, 200, 200, 0.55);
   }

}

.button.small {
 padding: 0.15em 0.75em;
}


/* HOME STYLES *******************/
#homePage {

  #searchForm {
    text-align: center;
    margin: 3em 0 2em 0;
    .form-group {
      padding-left: 0;
      padding-right: 0;
    }
    label {
      font-size: 2em;
      color: white;
      margin: 0.75em 0 0.15em 0;
    }
    input#searchBox {
      width: 80%;
      display: inline;
      border-top-right-radius:0em;
      border-bottom-right-radius:0em;
      border: none;
      height: 35px;
    }
    button[type=submit] {
      border-top-left-radius:0em;
      border-bottom-left-radius:0em;
      position: relative;
      left: -2px;
      top: -2px;
      border: none;
      padding: 7px 12px;
      height: 35px;
    }
  }

  #searchLinks {
    list-style: none;

    li {
      margin-bottom: 1em;
     a {
      display: block;
      font-size: 2em;
      padding: 20px 20px 20px 80px;
      color: $main-blue;
      @include rounded(5px);

      &.near {background: url('<%= asset_path('icon-near-me.png') %>') no-repeat 20px center  #f0f0f0; }
      &.childcare {background: url('<%= asset_path('icon-childcare.png') %>') no-repeat 20px center  #f0f0f0; }
      &.clubs {background: url('<%= asset_path('icon-clubs.png') %>') no-repeat 20px center  #f0f0f0; }
      &.sport {background: url('<%= asset_path('icon-sports.png') %>') no-repeat 20px center  #f0f0f0; }
      &.support {background: url('<%= asset_path('icon-support.png') %>') no-repeat 20px center  #f0f0f0; }
      &.health {background: url('<%= asset_path('icon-health.png') %>') no-repeat 20px center  #f0f0f0; }
      &.learning {background: url('<%= asset_path('icon-learning.png') %>') no-repeat 20px center  #f0f0f0; }
      &.prenatal-babies {background: url('<%= asset_path('icon-babies.png') %>') no-repeat 20px center  #f0f0f0; }
      &.music-drama {background: url('<%= asset_path('icon-music-drama.png') %>') no-repeat 20px center  #f0f0f0; }

      &:hover {text-decoration: none;}

     }
    }
   }

}

/* SEARCH FORM STYLES *******************/
#filtersForm {
  background: $main-blue;
  width: 25%;
  float: left;
  height: 100%;
  overflow: scroll;

  form {
    margin: 1em;
    color: white;

    label {
     display: inline-block;
     font-size: 1.25em !important;
     padding: 0.25em 0 0 0;
     text-align: left;
     span.glyphicon { font-size: 0.75em; }
     }

    a.selectAll {float: right;}

    ul.checkBoxes {
     list-style: none;
     padding: 0;
     label {
      font-weight: 300;
      font-size: 1em !important;
      input {margin-right: 0.5em;}
     }
    }
    #selectDays li {
      display: inline-block;
    }

    .slider.slider-horizontal {
      width: 85%;
      height: 20px;
     }
   }
}


/* SEARCH RESULTS STYLES *******************/

#resultsPage {

  address { color:#888; }

  .double-button-group {
     background: $main-blue;
     padding: 0 0 1em 0;
     button, a {
       width: 49%;
       font-size: 1.25em;
       color: $main-blue;
       span.glyphicon {margin-right: 0.25em;}
     }
   }

  #resultsList {
    background: white;
    overflow: scroll;
    border: 1px solid;
    border-bottom: none;
    border-top: none;
    width: 25%;
    float: left;
    height: 100%;

    #entries {
     padding: 1em;
    }

    #pagResults {
     padding: 1em;
     a {
      display: inline-block;
      &.more {float: right;}
      }
    }

    #noResults {
     padding: 0 1em;
    }

    ul {
     list-style: none;
     padding: 0;
     margin: 0;
     li {
       border-bottom: 1px solid black;
       padding: 1em;
       h3 {font-size: 21px; color: #0e3e6c; font-weight: 700;}
       p {color: $orange;}
       * {margin: 0;}
     }

   }
  }


}

#mapPanel {
  width: 50%;
  height: 100%;
  display: block;
  float: right;
}

#resultsPage #mapPanel #mapResults{
  width: 100%;
  height: 100%;
  display: block;
}


