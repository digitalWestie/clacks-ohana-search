
$main-blue:     #336699;
$light-blue:    #81a7cc;
$dark-grey:     #666666;
$medium-grey:   #999999;
$light-grey:    #f0f0f0;
$yellow:        #ffda00;
$bright-blue:   #428bca;
$green:         #449d44;
$orange:        #d45518;

@mixin rounded ($radius: 2px) {
  border-radius: $radius;
  -webkit-border-radius: $radius;
  -moz-border-radius: $radius;
  -khtml-border-radius: $radius;
}

@mixin box-sized () {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}


@mixin transform($transforms) {
	   -moz-transform: $transforms;
	     -o-transform: $transforms;
	    -ms-transform: $transforms;
	-webkit-transform: $transforms;
          transform: $transforms;
}
// rotate
@mixin rotate ($deg) {
  @include transform(rotate(#{$deg}deg));
}


/* BUTTON STYLES *******************/

.button.orange {
 background: $orange;
}

.button.right {float: right;}


/* LAYOUT STYLES *******************/

div.navbar {
 background: $main-blue;
 margin-bottom: 0;

 a {color: white; }

}


/* HOMEPAGE STYLES *******************/

#searchForm {
  background: url('<%= asset_path('clacks/gplaypattern.png') %>')
}


#searchForm {
 padding: 3em 15px;
 label { display: block; font-size: 3em; text-align: center; }
 .input-group {padding: 0 15px;}
 .input-group-btn {vertical-align: bottom; margin-right: 15px;
   button {padding: 0.5em 1.5em;; height: 50px;}

  }
 input#searchBox {font-size: 1.5em; padding: 0.5em;  height: 50px;}
}

  #searchLinks {
    list-style: none;
    padding: 2em 0;
    li {
      margin-bottom: 1em;
     a {
      display: block;
      font-size: 2em;

      &:hover {text-decoration: none;}

     }
    }
   }





/* SEARCH FORM STYLES *******************/
#filtersForm {
  width: 25%;
  float: left;
  height: 100%;
  overflow: scroll;

  form {
    margin: 1em;

    label {
     display: inline-block;
     color: black;
     font-size: 1.25em !important;
     padding: 0.25em 0 0 0;
     text-align: left;
     span.glyphicon { font-size: 0.75em; }
     }

    a.selectAll {float: right;}

    ul.checkBoxes {
     list-style: none;
     padding: 0;
     label {
      font-weight: 300;
      font-size: 1em !important;
      input {margin-right: 0.5em;}
     }
    }
    #selectDays li {
      display: inline-block;
    }

    .slider.slider-horizontal {
      width: 85%;
      height: 20px;
     }
   }
}


/* SEARCH RESULTS STYLES *******************/

#resultsPage {

  p.location { color:#666 !important; font-weight: 600; padding-top: 0.25em;}
  address { color:#888 !important; }


  .double-button-group {

     padding: 0 0 1em 0;
     button, a {
       width: 49%;
       font-size: 1.25em;
       color: $main-blue;
       span.glyphicon {margin-right: 0.25em;}
       display: inline-block;
       text-align: center;
       padding: 0.5em;
       &.search, &.green, &.orange {
        color: white
       }

       }
   }

  #resultsList {
    background: white;
    overflow: scroll;
    border: 1px solid;
    border-bottom: none;
    border-top: none;
    width: 25%;
    float: left;
    height: 100%;

    #entries {
     padding: 1em;
    }

    #pagResults {
     padding: 1em;
     a {
      display: inline-block;
      &.more {float: right;}
      }
    }

    #noResults {
     padding: 0 1em;
    }

    ul {
     list-style: none;
     padding: 0;
     margin: 0;
     li {
       border-bottom: 1px solid black;
       padding: 1em;
       h3 {font-size: 21px; color: #0e3e6c; font-weight: 700;}
       p {color: $orange;}
       * {margin: 0;}
     }

   }
  }


}

#mapPanel {
  width: 50%;
  height: 100%;
  display: block;
  float: right;
}

#resultsPage #mapPanel #mapResults{
  width: 100%;
  height: 100%;
  display: block;
}



/* Small devices (tablets, 768px and up) */
@media (max-width: 767px) {
  body {

   .button { padding: 0.5em; }


  .navbar-toggle {
   .icon-bar {background: white;}
  }


  #homePage {
      #searchLinks a {
      font-size: 1.75em;
      }

      #searchForm label {
       font-size: 1.8em !important;
      }

    input#searchBox {
      display: inline;
    }
  }
  #filtersForm,
  #resultsList,
  #mapResults {
    width: 100% !important;
    height: auto !important;

  }
  #filtersForm {
    width: 100% !important;
    z-index: 1000;
    height: 100% !important;
    display: none;
  .double-button-group {
    padding: 0 0 1em 0 !important;
    }
  }
  #resultsList {
    height: 100% !important;
    display: none;
  }
  #mapResults, #mapPanel {
    width: 100% !important;
    z-index: 1000;
    height: 600px !important;
  }
  .double-button-group {padding: 1em !important;
      .button {
        padding: 0.25em !important;
        font-size: 1.15em!important;
        span.glyphicon {margin-right: 0 !important;}
      }
   }

  footer {
    display: none;
  }
 }
}

/* Small devices (tablets, 768px and up) */
@media (min-width: 768px) {


  body {
     -webkit-background-size: cover;
     -moz-background-size: cover;
     -o-background-size: cover;
     background-size: cover;
  }
  .navbar {
    .navbar-header {display: inline-block;}
    .navbar-toggle {display: none;}
    .navbar-collapse {
      border-top: none;
      float: right;
      display: inline-block;
      visibility: visible;
      ul li {display: inline-block;

      a:hover {background: inherit; text-decoration: underline; }

      }
      }
    }

  #homePage {
   margin-top: 0px;
  }
  .tab-content > .tab-pane {
    display: block !important;
  }
  #resultsList {
    .double-button-group{
      display: none;
    }
  }
  #mapPanel {
    .double-button-group {
      display: none;
    }
  }


}
