$(document).ready(function(){

  // Fixing the height of panels on the Search Page
  if ($(window).width() > 768) {
    var windowHeight = $(window).height();
    var minusFooterHeader = ($('.navbar').outerHeight() + $('footer').outerHeight());
    $('#resultsPage').css({height: windowHeight - minusFooterHeader});
  }

  //$("#yourBudget").slider({});
  var ageSlider = $("#childrenAge").slider({});

  $('button#filterResults').click(function() {
    $('#mapPanel').hide();
    $('#filtersForm').show();
  });

  $('button#doSearch').click(function() {
    $('#mapPanel').show();
    $('#filtersForm').hide();
  });

  $('button#showList').click(function() {
    $('#resultsList').show();
    $('#mapPanel').hide();
  });

  $('button#showMap').click(function() {
    $('#resultsList').hide();
    $('#mapPanel').show();
  });

  // Reset the form fields
  $( ".selectAll.check" ).click(function() {
    $(this).parent('.form-group').find('.CKcheckbox').prop('checked', true);
    return false;
  });

  $('#clearFilter, #clearFilter2').click(function(){
    $('#keywordSearch').val('');
    $('#organisationName').val('');
    $('#townVillage').val('');
    $('ul#category-filters input[type="checkbox"]').prop('checked', false);
    $('ul#weekday-filters input[type="checkbox"]').prop('checked', false);
    ageSlider.slider('setValue', [0,16]);
    $('#is_paid_all').prop('checked', true);
  });

});